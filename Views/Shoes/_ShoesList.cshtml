@model IEnumerable<Online_Shoes_Shop.Models.ShoesModel>

@if (Model == null || !Model.Any())
{
    <div class="box">
        <div class="content">
            <h3>No items found</h3>
        </div>
    </div>
}
else
{
    foreach (var shoes in Model)
    {

        <div id="getDetail" class="box" style="width:19vw; position: relative;">
            <a style="text-decoration:none;" asp-controller="Shoes" asp-action="ShoeDetail"
               asp-route-ShoeId="@shoes.ShoeId">
                <div class="image-container bg-primary" style="position: relative;">
                    <!-- Category Name on Image -->
                    <div class="category-label">@shoes.CategoryName</div>

                    <div class="image" style="background:white;">
                        <img style="object-fit:fill;" src="@shoes.ImageURL" alt="NAthi bhai aama">
                    </div>
                </div>
                <div class="content">
                    <h3>@shoes.Name</h3>
                    <div class="price">$@shoes.Price</div>
                </div>
            </a>
        </div>

        
    }
}

