@model IEnumerable<Online_Shoes_Shop.Models.GetUserOrdersModel>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .main-container {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .order-container {
            width: 100%;
            max-width: none;
            background: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 24px;
            margin-bottom: 20px;
            text-align: center;
        }

        .order-item {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr 1fr;
            align-items: center;
            gap: 15px;
            padding: 15px;
            border-bottom: 1px solid #ddd;
        }

            .order-item:last-child {
                border-bottom: none;
            }

        .order-number {
            font-weight: bold;
            color: #333;
            font-size: 16px;
            margin-left: 4vw;
        }

        .order-date {
            color: #555;
            font-size: 14px;
            margin-top: 5px;
        }

        .payment {
            font-size: 14px;
            color: #555;
            margin-right: vw;
        }

        .status {
            font-size: 14px;
            font-weight: bold;
        }

            .status.pending {
                color: orange;
            }

            .status.processing {
                color: yellow;
            }

            .status.dispatched{
                color:blue;
            }
            .status.cancelled {
                color: red;
            }
            .status.delivered {
                color: green;
            }

        .status-date {
            font-size: 12px;
            font-weight: bold;
            display: block;
            color: #555;
            margin-top: 2px;
        }

        .total {
            font-weight: bold;
            font-size: 14px;
        }

        .view-product {
            color: blue;
            font-size: 14px;
            text-decoration: none;
            font-weight: bold;
        }

            .view-product:hover {
                text-decoration: underline;
            }

        @@media (max-width: 768px) {
            .order-item {
                grid-template-columns: 1fr;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="order-container">
            <h2>Order List</h2>
            @if (Model != null && Model.Any())
            {
                <!-- Title Row -->
                <div class="order-item" style="background-color: lightgray;font-weight: 600;border-radius: 5px;font-size: 1.5rem;">
                    <div></div>
                    <div>Payment Method</div>
                    <div>Status</div>
                    <div>Total Amount</div>
                </div>

                <!-- Loop through orders -->
                @foreach (var order in Model)
                {
                    <div class="order-item">
                        <div class="order-number">
                            Order Number #@order.OrderId
                            <br>
                            <span class="order-date">Order Date: @order.OrderDate.ToString("dd-MM-yyyy")</span>
                        </div>
                        <div class="payment">@order.PaymentMethod</div>
                        <div class="status @order.Status.ToLower()">
                            @order.Status
                            <span class="status-date">(Updated: @order.LastStatusChangedDate.ToString("dd-MM-yyyy hh:mm tt"))</span>
                        </div>
                        <div class="total">$@order.TotalAmount</div>
                        <a href="#" class="view-product">View Product »</a>
                    </div>
                }
            }
            else
            {
                <!-- Message if no orders -->
                <div class="no-orders">No orders found.</div>
            }


