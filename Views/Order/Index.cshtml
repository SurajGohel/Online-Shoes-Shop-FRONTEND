@using Newtonsoft.Json
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    // Retrieve session data
    var cartItemsJson = HttpContextAccessor.HttpContext.Session.GetString("CartItems");
    var cartItems = cartItemsJson != null ? JsonConvert.DeserializeObject<List<CartModel>>(cartItemsJson) : new List<CartModel>();
    var totalPrice = cartItems.Sum(item => item.ShoePrice*item.Quantity);
}
@{
    Layout = null;
}
